<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/stylesheets/style.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>

<div class="container my-5">
  <div class="proyecto-header">
    <h2>ðŸ“· Detalle de Foto</h2>
    <p>ID: <%= foto.id %></p>
  </div>

  <div class="card shadow mt-4">
    <div class="row g-0">
      <!-- Columna de imagen -->
<div class="col-md-6">
  <% if (foto.ruta) { 
    const rutaImagen = foto.ruta.startsWith('public/') ? '/' + foto.ruta : '/public/' + foto.ruta;
  %>
    <img src="<%= rutaImagen %>" 
         class="img-fluid rounded-start" 
         alt="<%= foto.titulo %>"
         style="max-height: 500px; width: 100%; object-fit: cover;">
  <% } else { %>
    <div class="bg-light d-flex align-items-center justify-content-center" 
         style="height: 100%; min-height: 300px;">
      <span class="text-muted">Imagen no disponible</span>
    </div>
  <% } %>
</div>
      
      <!-- Columna de detalles -->
      <div class="col-md-6">
        <div class="card-body">
          <h1 class="card-title"><%= foto.titulo %></h1>
          <p class="card-text"><%= foto.descripcion %></p>
          
          <div class="mb-3">
            <span class="badge bg-success p-2">
              CalificaciÃ³n: <%= foto.calificacion %>
            </span>
          </div>
          
          <div class="mb-4">
            <h4>Etiquetas:</h4>
            <div class="d-flex flex-wrap gap-2">
              <% if (foto.etiquetas && foto.etiquetas.length > 0) { %>
                <% foto.etiquetas.forEach(etiqueta => { %>
                  <span class="badge bg-primary">
                    <%= etiqueta.texto %>
                  </span>
                <% }); %>
              <% } else { %>
                <span class="text-muted">Sin etiquetas</span>
              <% } %>
            </div>
          </div>
          
          <div class="mt-4">
            <a href="/fotos/findAll/view" class="btn btn-secondary">
              <i class="bi bi-arrow-left"></i> Volver a la galerÃ­a
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>